
#include <iostream>
using namespace std;
int main() {
	setlocale(0, "");
	cout << "Продолжение программы “Геометрические фигуры”" << endl;
	cout << "выберите фигуру: " << endl;
	cout << "1- линия 2- квадрат 3-прямоугольник" << endl;
	int m;
	cin >> m;
	if (m == 1) {
		cout << "введите текстуру" << endl;
		char tex;
		cin >> tex;
		cout << "введите размер " << endl;
		int g;
		cin >> g;
		while (g >= 0) {
			cout << tex << " ";
			g--;
		}
	}
	if (m == 2) {
		cout << "1полый или 2заполненный" << endl;
	    int y; cin >> y;
	    if (y == 1) {
		    cout << "введите текстуру" << endl;
		    char tex;
		    cin >> tex;
		    cout << "введите размер " << endl;
		    int size;
		    cin >> size;
		    for (int i = 0; i < size; i++) {
			    for (int j = 0; j < size; j++) {
			    	if (i == 0 || i == size - 1 || j == 0 || j == size - 1) {
					    cout << tex << " ";
				    }
				    else {
					    cout << "  ";
				    }
			    }
			    cout << endl;
		    }
	    }
	    if (y == 2) {

		    int size;

		    cout << "введите текстуру" << endl;
		    int tex;
		    cin >> tex;
		    cout << "задайте размер: ";
		    cin >> size;

		    int b;

		    for (int i = 0; i < size; i++) {
			    for (int j = 0; j < size; j++) {
				    cout << tex << " ";
			    }
			    cout << endl;
		    }
	    }
	}
	if (m == 3) {
		int y1;
		cout << "1полый или 2заполненый " << endl;
		cin >> y1;
		if (y1 == 1) {
			cout << "введите текстуру" << endl;
			char tex; cin >> tex;
			cout << "введите высоту" << endl;
			int size1;
			cin >> size1;
			cout << "введите ширину " << endl;
			int size2;
			cin >> size2;
			for (int i = 0; i < size1; i++) {
				for (int j = 0; j < size2; j++) {
					if (i == 0 || i == size1 - 1 || j == 0 || j == size2 - 1) {
						cout << tex << " ";
					}
					else {
						cout << "  ";
					}
				}
				cout << endl;
			}
		}
		if (y1 == 2) {
			int size1;
			int size2;

			cout << "введите текстуру" << endl;
			int tex;
			cin >> tex;
			cout << "задайте высоту: ";
			cin >> size1;
			cout << "задайте ширину" << endl;
			cin >> size2;


			for (int i = 0; i < size1; i++) {
				for (int j = 0; j < size2; j++) {
					cout << tex << " ";
				}
				cout << endl;
			}
		}

		}


}

